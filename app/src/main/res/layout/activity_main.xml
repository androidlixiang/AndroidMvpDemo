<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff00f"
    android:clipChildren="false"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.lixiang.androidmvpdemp.widget.TextProgress
            android:id="@+id/mProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="50dp"
            android:indeterminateOnly="false"
            android:max="100"
            android:progressDrawable="@drawable/progress_group" />

        <FrameLayout
            android:id="@+id/mFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/mImageView"
                android:layout_width="194px"
                android:layout_height="83px"
                android:scaleType="fitXY"
                android:src="@mipmap/robot_head" />


            <com.lixiang.androidmvpdemp.widget.DividerView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:dashGap="18px"
                app:dashLength="18px"
                app:dashThickness="18px"
                app:divider_line_color="#D8D8D8" />
        </FrameLayout>


        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="15637939253" />

        <EditText
            android:id="@+id/et_pasww"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:text="q123456" />

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="登陆1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/qq"
            android:text="登陆2" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="aaaaaaaaaaa" />


        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="170dp"
            android:layout_gravity="center_horizontal">

            <com.lixiang.androidmvpdemp.widget.FocusImageView
                android:id="@+id/iv_animation"
                android:layout_width="300dp"
                android:layout_height="170dp"
                android:focusableInTouchMode="true"
                android:padding="3dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ttt" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="300dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/timg" />

            <View
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:background="#b3ffffff" />

        </RelativeLayout>

        <com.lixiang.androidmvpdemp.widget.PanelView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="100dp" />
    </LinearLayout>
</ScrollView>